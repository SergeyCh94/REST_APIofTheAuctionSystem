<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="create-lot-table" author="me">
        <createTable tableName="lot">
            <column name="id" type="bigint" autoIncrement="true"/>
            <column name="title" type="varchar(64)"/>
            <column name="description" type="varchar(4096)"/>
            <column name="start_price" type="int"/>
            <column name="bid_price" type="int"/>
            <column name="state" type="varchar(20)"/>
            <column name="bids_count" type="int"/>
            <column name="current_price" type="int"/>
        </createTable>
    </changeSet>

</databaseChangeLog>